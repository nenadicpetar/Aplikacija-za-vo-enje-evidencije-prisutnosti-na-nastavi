<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_login_root_view"
        tools:context=".ChooseSubjectActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/side_nav_bar"
                android:layout_alignParentTop="true"
                android:contentDescription="TODO"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/login_welcome_text_view"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:textSize="23sp"
                android:textColor="#E3D3E4"
                android:text="@string/choose_course"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_welcome_text_view"
                android:layout_centerHorizontal="true"
                android:id="@+id/login_subtitle"
                android:paddingTop="10dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:text="@string/available_courses"
                android:textColor="#E3D3E4"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_below="@+id/login_subtitle"
        >

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DRAc3-03 Osiguranje kakvoce programske podrske"
                    android:textColor="#E3D3E4"
                    android:id="@+id/englishc"
                    android:minHeight="48dp"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DR3-01 Pouzdanost i dijagnostika racunalnih sustava"
                    android:textColor="#E3D3E4"
                    android:id="@+id/japanesec"
                    android:minHeight="48dp"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/aac"
                    android:minHeight="48dp"
                    android:textColor="#E3D3E4"
                    android:text="DRac1-06-18 Metode i tehnike testiranja programsake podrške"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/securityc"
                    android:minHeight="48dp"
                    android:textColor="#E3D3E4"
                    android:text="DRc1-05 Modeliranje i dizajn programskih sustava"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/plc"
                    android:textColor="#E3D3E4"
                    android:text="DRcd1-06-18 Računarstvo usluga i analiza podataka"
                    android:minHeight="48dp"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DR2-01 Računalni sustavi stvarnog vremena"
                    android:id="@+id/projectc"
                    android:minHeight="48dp"
                    android:textColor="#E3D3E4"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DRcKb2-05 Razvoj mobilnih aplikacija"
                    android:id="@+id/androidc"
                    android:minHeight="48dp"
                    android:textColor="#E3D3E4"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DRcd1-04 Sistemsko programiranje"
                    android:id="@+id/kemajorc"
                    android:minHeight="48dp"
                    android:textColor="#E3D3E4"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DRcd2-03 Vizualizacija podataka"
                    android:id="@+id/semajorc"
                    android:minHeight="48dp"
                    android:textColor="#E3D3E4"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DRcdKb2-02-18 WEB programiranje"
                    android:id="@+id/hpcmajorc"
                    android:minHeight="48dp"
                    android:textColor="#E3D3E4"
            />

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DRac3-03 Osiguranje kakvoće programske podrške"
                    android:id="@+id/bismajorc"
                    android:minHeight="48dp"
                    android:textColor="#E3D3E4"
            />

        </LinearLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/choosemsub_bt_continue"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:textColor="#000"
                android:text="@string/cont_inue"
        />

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/choosesubject_customized_toolbar"
            app:layout_collapseMode="none"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>